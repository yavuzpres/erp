<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_production_form_view_sale_mrp_intercompany" model="ir.ui.view">
        <field name="name">mrp.production.form.view.sale.mrp.intercompany</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="client"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="parent_client"/>
                <field name="parent_client_ref"/>
                <field name="sale_order_id"/>
                <field name="date_source_order"/>
            </xpath>
        </field>
    </record>
</odoo>
